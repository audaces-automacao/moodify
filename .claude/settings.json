{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "MultiEdit",
      "Write",
      "NotebookEdit",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Task",
      "TodoWrite",
      "Skill",
      "Bash(npm run build*)",
      "Bash(npm run dev*)",
      "Bash(npm run lint*)",
      "Bash(npm run test*)",
      "Bash(npm run start*)",
      "Bash(npm run watch*)",
      "Bash(npm ls*)",
      "Bash(npm install*)",
      "Bash(npx prettier*)",
      "Bash(npx ng build*)",
      "Bash(npx ng serve*)",
      "Bash(npx ng test*)",
      "Bash(npx ng lint*)",
      "Bash(npx ng generate*)",
      "Bash(npx ng update*)",
      "Bash(cd server && npm test*)",
      "Bash(cd server && npm start*)",
      "Bash(cd server && npm install*)"
    ],
    "deny": [
      "Bash(git commit*)",
      "Bash(git push*)",
      "Bash(git push --force*)",
      "Bash(git reset --hard*)",
      "Bash(git rebase*)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~*)",
      "Bash(sudo *)",
      "Bash(curl * | bash*)",
      "Bash(curl * | sh*)",
      "Bash(wget * | bash*)",
      "Bash(wget * | sh*)",
      "Bash(git branch -D *)",
      "Bash(git clean *)",
      "Bash(git checkout -- *)",
      "Bash(git checkout .)",
      "Bash(git restore *)",
      "Bash(git stash drop*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write|NotebookEdit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/restrict-paths.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/format-node.js",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
