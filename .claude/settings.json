{
  "permissions": {
    "allow": [
      "Bash(npx ng update:*)",
      "Bash(npm run build:*)",
      "Bash(npm ls:*)",
      "Bash(npm test:*)",
      "Bash(npx ng test:*)",
      "Bash(npm run test:ci:*)"
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git reset --hard:*)",
      "Bash(git push --force:*)"
    ]
  },
  "hooks": {
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "taskkill /F /FI \"WINDOWTITLE eq*npm*\" 2>nul & taskkill /F /IM node.exe 2>nul || exit 0"
          }
        ]
      }
    ]
  }
}
